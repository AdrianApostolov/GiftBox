@using GiftBox.Web.Areas.Administration.ViewModels.Needs
@using GiftBox.Web.Infrastructure.HtmlHelpers
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="card-panel hoverable">
        @(Html.FullFeaturedGrid<AdministrationNeedViewModel>("grid", "Needs", "Needs", "Read", "Create", "Update", "Destroy",
              model =>
              {
                  model.Id(m => m.Id);
              },
              cols =>
              {
                  cols.Bound(c => c.Id);
                  cols.Bound(c => c.HomeName);
                  cols.Bound(c => c.Description);
                  cols.Bound(c => c.CreatedOn);
                  cols.Bound(c => c.ModifiedOn);
                  cols.Command(command =>
                  {
                      command.Destroy();
                  });
              }))
    </div>
</div>

@section kendo{
    @Styles.Render("~/Content/kendo/css")
    @Scripts.Render("~/bundles/kendo")
}