@using GiftBox.Common
@model GiftBox.Web.ViewModels.Gift.DetailsGiftViewModel
@{
    ViewBag.Title = "DonateGift";
}

<div class="container">
    <div class="col s12 m12 l4">
        <div class="map-card">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <section id="contact" class="map" style="height: 400px;">
                        <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?q=(@Model.Child.Home.Location.Address.Replace(" ", "+"))&hl=bg&ie=UTF8&z=17&iwloc=&t=k&output=embed"></iframe>
                        <br />
                        <small>
                            <a href="https://maps.google.com/maps?q=(@Model.Child.Home.Location.Address.Replace(" ", "+"))&hl=bg&ie=UTF8&z=17&iwloc=&t=k&output=embed"></a>
                        </small>
                    </section>
                </div>
                <div class="card-content">
                    <a class="btn-floating activator btn-move-up waves-effect waves-light darken-2 right">
                        <i class="mdi-maps-pin-drop"></i>
                    </a>
                    <div class="row">
                        <h4 class="card-title col s 4">
                            <span>Institution Name: </span><a href="/Institution/Details/@Model.Child.Home.Id">@Model.Child.Home.Name</a>
                        </h4>
                        <h4 class="card-title col s 4">
                            <span>Country: <b>@Model.Child.Home.Location.Country</b></span>
                        </h4>
                        <h4 class="card-title col s 4">
                            <span>City: <b>@Model.Child.Home.Location.City</b></span>
                        </h4>
                    </div>
                    <p class="blog-post-content"></p>
                </div>
                <div class="card-reveal center">
                    @Html.Partial(GlobalConstants.HomeDetailsPartial, Model.Child.Home)
                </div>
            </div>
        </div>
    </div>
</div>

