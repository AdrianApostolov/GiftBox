@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="container">
    <div id="error-page" style="margin-top: 20px;" class="bounceInDown animated">
        <div class="row">
            <div class="col s12">
                <div class="browser-window">
                    <div class="top-bar">
                        <div class="circles">
                            <div id="close-circle" class="circle"></div>
                            <div id="minimize-circle" class="circle"></div>
                            <div id="maximize-circle" class="circle"></div>
                        </div>
                    </div>
                    <div class="content">
                        <div class="row">
                            <div id="site-layout-example-top" class="col s12">
                                <h5 class="flat-text-logo center white-text caption-uppercase">INTERNAL SERVER ERROR</h5>
                            </div>
                            <div id="site-layout-example-right" class="col s12">
                                <div class="row center">
                                    <h1 class="text-long-shadow col s12">500</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>