@model GiftBox.Web.ViewModels.Comments.CommentViewModel

<div class="panel panel-default bounceInDown animated">
    <ul class="collection z-depth-4">
        <li class="collection-item avatar email-unread">
            @Html.DisplayFor(m => m.AuthorName, "CommentAuthorPrefix")
            @Html.DisplayFor(m => m.AuthorName, "CommentAuthor")
